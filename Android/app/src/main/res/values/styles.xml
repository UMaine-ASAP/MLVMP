<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name = "android:actionBarStyle">@style/MyActionBar</item>
        <item name = "actionBarStyle">@style/MyActionBar</item>
        <item name = "android:windowBackground">@color/light_brown</item>

    </style>

    <style name = "MyActionBar"
        parent = "@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name = "android:background">@color/dark_brown</item>
        <item name = "background">@color/dark_brown</item>
        <item name="displayOptions">showCustom</item>
        <item name="android:displayOptions">showCustom</item>

    </style>

    <style name = "MyActionBar2"
        parent = "@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name = "android:background">@color/dark_brown</item>
        <item name = "background">@color/dark_brown</item>
        <item name="displayOptions">showCustom</item>
        <item name="android:displayOptions">showCustom</item>
        <item name = "android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>

    </style>
    <style name = "AppTheme2" parent = "@style/AppTheme">
        <item name= "android:actionBarStyle">@style/MyActionBar2</item>
        <item name = "actionBarStyle">@style/MyActionBar2</item>
        <item name = "android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!---These control the background (dark margin and light background) for most pages on app -->
    <style name = "scroll">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:layout_marginLeft">9dp</item>
        <item name = "android:layout_marginRight">9dp</item>

        <item name = "android:layout_gravity">center_horizontal</item>
        <item name = "android:gravity">center_horizontal</item>
        <item name = "android:background">@color/light_brown</item>
    </style>
    <style name = "background">
        <item name = "android:orientation">vertical</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:background">@color/medium_brown</item>
    </style>

    <!---Button Styles -->
    <style name = "category_container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>

    </style>
    <!---Regular Size -->
    <style name = "category_image_regular">
        <item name = "android:layout_width">300dp</item>
        <item name=   "android:layout_height">210dp</item>
        <item name=  "android:layout_gravity">center_horizontal</item>
    </style>
    <style name = "category_button_regular">
        <item name = "android:layout_width">300dp</item>
        <item name = "android:layout_height">60dp</item>
        <item name = "android:background">@drawable/button</item>
        <item name = "android:textColor">@color/light_brown</item>
        <item name= "android:textSize">20dp</item>
        <item name=  "android:layout_marginBottom">0dp</item>

        <item name=  "android:gravity">center</item>
        <item name=  "android:textAllCaps">false</item>
        <item name = "android:layout_marginTop">-4dp</item>
        <item name = "android:layout_gravity">center_horizontal</item>
        <item name = "android:clickable">false</item>
    </style>
    <style name = "shadow_regular">
        <item name = "android:layout_width">300dp</item>
         <item name = "android:layout_height">12dp</item>
        <item name = "android:layout_marginTop">-3dp</item>
        <item name = "android:layout_marginBottom">24dp</item>
         <item name = "android:background">@drawable/shadow</item>
         <item name = "android:layout_gravity">center_horizontal</item>
    </style>
    <style name = "location_button_regular" parent = "category_button_regular">
        <item name = "android:onClick">toIdentify</item>
        <item name = "android:layout_height">70dp</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_marginLeft">18dp</item>
        <item name = "android:layout_marginRight">18dp</item>
        <item name = "android:textSize">24dp</item>
        <item name = "android:clickable">true</item>
    </style>
    <style name = "location_shadow_regular" parent="shadow_regular">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_marginLeft">18dp</item>
        <item name = "android:layout_marginRight">18dp</item>
    </style>

    <!-- Large Size -->
    <style name = "category_image_large" parent = "category_image_regular">
        <item name = "android:layout_width">450dp</item>
        <item name=   "android:layout_height">320dp</item>
    </style>
    <style name = "category_button_large" parent="category_button_regular">
        <item name = "android:layout_width">450dp</item>
        <item name= "android:textSize">24dp</item>
    </style>
    <style name = "shadow_large" parent="shadow_regular">
        <item name = "android:layout_width">450dp</item>
    </style>

    <style name = "location_button_large" parent = "category_button_large">
        <item name = "android:onClick">toIdentify</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_marginLeft">54dp</item>
        <item name = "android:layout_marginRight">54dp</item>
        <item name = "android:layout_height">100dp</item>
        <item name = "android:textSize">32dp</item>
        <item name = "android:clickable">true</item>
    </style>
    <style name = "location_shadow_large" parent="shadow_large">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_marginLeft">54dp</item>
        <item name = "android:layout_marginRight">54dp</item>
    </style>

    <!--Data Text Styles-->

    <!--Regular-->
    <style name = "data_text_regular">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_marginLeft">18dp</item>
        <item name = "android:layout_marginRight">18dp</item>
        <item name = "android:gravity">center</item>
        <item name = "android:textColor">@color/dark_brown</item>
        <item name = "android:textSize">18dp</item>
    </style>

    <style name = "name_text_regular" parent = "data_text_regular">
        <item name = "android:layout_marginBottom">4dp</item>
        <item name = "android:layout_marginTop">9dp</item>
        <item name = "android:textStyle">bold</item>
    </style>
    <style name = "sciname_text_regular" parent = "data_text_regular">
        <item name = "android:textStyle">italic</item>
    </style>
    <style name = "info_text_regular" parent = "data_text_regular">
        <item name = "android:layout_marginBottom">18dp</item>
    </style>

    <!--Large-->
    <style name = "data_text_large">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_marginLeft">18dp</item>
        <item name = "android:layout_marginRight">18dp</item>
        <item name = "android:gravity">center</item>
        <item name = "android:textColor">@color/dark_brown</item>
        <item name = "android:textSize">18dp</item>
    </style>

    <style name = "name_text_large" parent = "data_text_large">
        <item name = "android:layout_marginBottom">4dp</item>
        <item name = "android:layout_marginTop">9dp</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textSize">26dp</item>
    </style>
    <style name = "sciname_text_large" parent = "data_text_large">
        <item name = "android:textStyle">italic</item>
        <item name = "android:textSize">26dp</item>
    </style>
    <style name = "info_text_large" parent = "data_text_large">
        <item name = "android:layout_marginBottom">18dp</item>
    </style>





